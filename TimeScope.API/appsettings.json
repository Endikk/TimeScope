      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/timescope-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "TCPSink",
        "Args": {
          "uri": "tcp://logstash:5000"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}