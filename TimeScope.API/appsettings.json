{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=timescope_db;Username=svc_timescope;Password=TimeScopeSecurePassword123!;Maximum Pool Size=50;Minimum Pool Size=5;Connection Idle Lifetime=300;"
  },
  "Jwt": {
    "Key": "TimeScope_Secret_Key_For_Development_Only_123!@#",
    "Issuer": "TimeScope.API",
    "Audience": "TimeScope.Frontend"
  },
  "CorsOrigins": [
    "http://localhost:3000",
